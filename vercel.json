{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://school-management-api-izm4.onrender.com/api/$1"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://online-school-management-sigma.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                }
            ]
        }
    ]
}